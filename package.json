{
  "name": "easyrest-second-screen",
  "version": "0.1.1",
  "description": "Electron tabanlı ikinci ekran (müşteri görünümü)",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "debug": "electron . --debug",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "publish": "electron-builder --publish=always",
    "draft": "electron-builder --publish=never"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "electron": "^29.4.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.easyrest.secondscreen",
    "productName": "easyRest Second Screen",
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": "easyRest"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "iaydogdu",
      "repo": "360restoranFrontScreen"
    }
  }
}
